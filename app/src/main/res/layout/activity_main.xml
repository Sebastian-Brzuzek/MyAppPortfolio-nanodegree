<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title"
        android:id="@+id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spotify_streamer"
        android:id="@+id/buttonSpotifyStreamer"
        android:layout_below="@+id/textViewTitle"
        android:layout_marginTop="25dp"
        android:onClick="onClick"
        android:layout_alignLeft="@+id/buttonScoresApp"
        android:layout_alignStart="@+id/buttonScoresApp"
        android:layout_alignRight="@+id/buttonScoresApp"
        android:layout_alignEnd="@+id/buttonScoresApp"
        style="@style/PortfolioButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scores_app"
        android:id="@+id/buttonScoresApp"
        android:layout_below="@+id/buttonSpotifyStreamer"
        android:onClick="onClick"
        android:layout_alignLeft="@+id/buttonLibraryApp"
        android:layout_alignStart="@+id/buttonLibraryApp"
        android:layout_alignRight="@+id/buttonLibraryApp"
        android:layout_alignEnd="@+id/buttonLibraryApp"
        style="@style/PortfolioButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/library_app"
        android:id="@+id/buttonLibraryApp"
        android:layout_below="@+id/buttonScoresApp"
        android:onClick="onClick"
        android:layout_alignLeft="@+id/buttonBuildItBigger"
        android:layout_alignStart="@+id/buttonBuildItBigger"
        android:layout_alignRight="@+id/buttonBuildItBigger"
        android:layout_alignEnd="@+id/buttonBuildItBigger"
        style="@style/PortfolioButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/build_it_bigger"
        android:id="@+id/buttonBuildItBigger"
        android:onClick="onClick"
        android:layout_below="@+id/buttonLibraryApp"
        android:layout_alignLeft="@+id/buttonXyzReader"
        android:layout_alignStart="@+id/buttonXyzReader"
        android:layout_alignRight="@+id/buttonXyzReader"
        android:layout_alignEnd="@+id/buttonXyzReader"
        style="@style/PortfolioButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xyz_reader"
        android:id="@+id/buttonXyzReader"
        android:onClick="onClick"
        style="@style/PortfolioButton"
        android:layout_below="@+id/buttonBuildItBigger"
        android:layout_alignStart="@+id/buttonCapstoneMyOwnApp"
        android:layout_alignEnd="@+id/buttonCapstoneMyOwnApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capstone_my_own_app"
        android:id="@+id/buttonCapstoneMyOwnApp"
        android:onClick="onClick"
        android:layout_below="@+id/buttonXyzReader"
        android:layout_centerHorizontal="true"
        style="@style/PortfolioCupstoneButton" />

</RelativeLayout>
